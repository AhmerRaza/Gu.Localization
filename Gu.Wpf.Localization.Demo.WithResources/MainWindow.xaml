<Window x:Class="Gu.Wpf.Localization.Demo.WithResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Gu.Wpf.Localization.Demo.Controls;assembly=Gu.Wpf.Localization.Demo.Controls"
        xmlns:l="clr-namespace:Gu.Wpf.Localization;assembly=Gu.Wpf.Localization"
        xmlns:p="clr-namespace:Gu.Wpf.Localization.Demo.WithResources.Properties"
        xmlns:withResources="clr-namespace:Gu.Wpf.Localization.Demo.WithResources"
        Title="MainWindow"
        Width="800"
        Height="600"
        l:TranslatorBehavior.Culture="sv"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <l:LanguageSelector Grid.Column="0" />
        <WrapPanel Grid.Column="1">
            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="No translations"
                      >
                <withResources:Errors />
            </GroupBox>

            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="Vanilla xaml"
                      >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="SwedishOnly"
                               />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="{l:Static p:Resources.SwedishOnly}"
                               />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="TranslatedToAll Run"
                               />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               >
                        <Run Text="{l:Static p:Resources.TranslatedToAll}" />
                    </TextBlock>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="TranslatedToAll"
                               />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="{l:Static p:Resources.TranslatedToAll}"
                               />
                </Grid>
            </GroupBox>

            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="Not in visual tree"
                      >
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{l:Static p:Resources.TranslatedToAll}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox BorderBrush="BlueViolet"
                      Header="DataTemplate"
                      >
                <ContentPresenter ContentTemplate="{StaticResource DemoTemplate}" />
            </GroupBox>

            <GroupBox BorderBrush="HotPink"
                      BorderThickness="2"
                      Header="UserControl from same project"
                      >
                <withResources:LocalUserControl />
            </GroupBox>

            <GroupBox BorderBrush="Blue"
                      BorderThickness="2"
                      Header="UserControl from other project"
                      >
                <controls:DemoUserControl />
            </GroupBox>

            <GroupBox BorderBrush="Red"
                      BorderThickness="2"
                      Header="Custom control from other project"
                      >
                <controls:DemoCustomControl />
            </GroupBox>
        </WrapPanel>
    </Grid>
</Window>
