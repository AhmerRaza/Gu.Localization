<Window x:Class="Gu.Wpf.Localization.Demo.WithResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Gu.Wpf.Localization.Demo.Controls;assembly=Gu.Wpf.Localization.Demo.Controls"
        xmlns:l="clr-namespace:Gu.Wpf.Localization;assembly=Gu.Wpf.Localization"
        xmlns:p="clr-namespace:Gu.Wpf.Localization.Demo.WithResources.Properties"
        xmlns:withResources="clr-namespace:Gu.Wpf.Localization.Demo.WithResources"
        Title="MainWindow"
        Width="800"
        Height="600"
        Language="en">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Source={x:Static l:Translator.Cultures}}"
                  SelectedItem="{Binding CurrentCulture,
                                         Source={x:Static l:Translator.CultureProxy}}" />
        <WrapPanel Grid.Row="1">
            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="No translations">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="MissingKey" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.MissingKey}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="SwedishAndNeutral" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.SwedishAndNeutral}" />


                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="MissingTranslation" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.MissingTranslation}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="NeutralOnly" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.NeutralOnly}" />

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Text="BadFormat" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Text="{l:Resource BadFormat}" />
                </Grid>
            </GroupBox>

            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="Vanilla xaml">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="SwedishOnly" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.SwedishOnly}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="TranslatedToAll" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="{l:Resource p:Resources.TranslatedToAll}" />
                </Grid>
            </GroupBox>

            <GroupBox BorderBrush="Green"
                      BorderThickness="2"
                      Header="Not in visual tree">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{l:Resource p:Resources.TranslatedToAll}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox BorderBrush="BlueViolet" Header="DataTemplate">
                <ContentPresenter ContentTemplate="{StaticResource DataTemplate}" />
            </GroupBox>

            <GroupBox BorderBrush="HotPink"
                      BorderThickness="2"
                      Header="UserControl from same project">
                <withResources:LocalUserControl />
            </GroupBox>

            <GroupBox BorderBrush="Blue"
                      BorderThickness="2"
                      Header="UserControl from other project">
                <controls:DemoUserControl />
            </GroupBox>

            <GroupBox BorderBrush="Red"
                      BorderThickness="2"
                      Header="Custom control from other project">
                <controls:DemoCustomControl />
            </GroupBox>
        </WrapPanel>
    </Grid>
</Window>
